<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nomis.androidpokedex">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pokelisticon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pokelisticon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"
            android:name="com.example.nomis.androidpokedex.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pokemon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:launchMode="singleTop"/>
            </intent-filter>
        </activity>
    </application>

</manifest>