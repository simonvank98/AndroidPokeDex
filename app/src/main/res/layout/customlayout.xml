<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/spriteView"
        android:contentDescription="@string/description"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/spriteborder"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spriteView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="-8dp"
        android:text=""
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pokemonClassification"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pokemonName"
        android:layout_alignBottom="@+id/spriteView"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="9dp"
        android:text=""
        android:textSize="15sp" />
</RelativeLayout>